generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int           @id @default(autoincrement())
  name          String        @default("")
  password      String        @default("")
  salt          String        @default("")
  email         String        @unique @default("")
  noteCreate    Notes[]       @relation("userCreateNote")
  noteUpdate    Notes[]       @relation("userUpdateNote")
  projectCreate Projects[]    @relation("userCreateProject")
  projectUpdate Projects[]    @relation("userUpdateProject")
  projectUsers  ProjectUser[] @relation()
}

model Notes {
  id          Int        @id @default(autoincrement())
  note        String     @default("")
  status      NoteStatus @default(CREATE)
  dueDate     Int?       @default(0)
  createdTime Int        @default(0)
  createdBy   Int        @default(0)
  userCreate  Users      @relation("userCreateNote", fields: [createdBy], references: [id])
  updatedTime Int        @default(0)
  updatedBy   Int?       @default(0)
  userUpdate  Users?     @relation("userUpdateNote", fields: [updatedBy], references: [id])
  noteUsers   NoteUser[]
}

model Projects {
  id           Int           @id @default(autoincrement())
  name         String        @default("")
  createdTime  Int           @default(0)
  createdBy    Int           @default(0)
  userCreate   Users         @relation("userCreateProject", fields: [createdBy], references: [id])
  updatedTime  Int           @default(0)
  updatedBy    Int?          @default(0)
  userUpdate   Users?        @relation("userUpdateProject", fields: [updatedBy], references: [id])
  projectUsers ProjectUser[] @relation()
}

model ProjectUser {
  id        Int        @id @default(autoincrement())
  idProject Int        @default(0)
  project   Projects   @relation(fields: [idProject], references: [id])
  idUser    Int        @default(0)
  user      Users      @relation(fields: [idUser], references: [id])
  noteUsers NoteUser[]
}

model NoteUser {
  id            Int         @id @default(autoincrement())
  idProjectUser Int         @default(0)
  projectUsers  ProjectUser @relation(fields: [idProjectUser], references: [id])
  idNote        Int         @default(0)
  note          Notes       @relation(fields: [idNote], references: [id])
}

enum NoteStatus {
  CREATE
  PROCESS
  DONE
}
