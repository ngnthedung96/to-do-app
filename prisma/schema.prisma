generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id    Int     @id @default(autoincrement())
  name  String  @default("")
  notes Notes[]
}

model Notes {
  id         Int    @id @default(autoincrement())
  note       String @default("")
  status     Int    @default(0)
  dueDate    Int?   @default(0)
  idAssignee Int    @default(0)
  user       Users  @relation(fields: [idAssignee], references: [id])
}
